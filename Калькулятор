<html lang="en">
<head>
<title>Calculator Matveeva</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Калькулятор корня</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
    }
    input {
      padding: 10px;
      margin: 10px;
    }
  </style>
</head>
<body>
  <h1>Калькулятор корня</h1>
  <input type="number" id="numberInput" placeholder="Введите число">
  <button onclick="calculate()">Вычислить корень</button>
  <p id="result"></p>

  <script>
    function calculate() {
      var number = document.getElementById('numberInput').value;
      var result = Math.sqrt(number);
      document.getElementById('result').innerText = 'Корень из ' + number + ' равен ' + result;
    }
  </script>
</body>
</html>
